<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="14" >

           <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3b5998"
        android:orientation="horizontal"
        android:weightSum="7" >

               <ImageView
                   android:id="@+id/imageView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:scaleType="fitStart"
                   android:src="@drawable/a1" />

               <ImageView
                   android:id="@+id/imageView2"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                    android:scaleType="fitCenter"
                   android:src="@drawable/a2" />

               <ImageView
                   android:id="@+id/imageView3"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:scaleType="fitCenter"
                   android:layout_weight="1"
                   android:src="@drawable/a3" />

               <ImageView
                   android:id="@+id/imageView4"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:scaleType="fitCenter"
                   android:layout_weight="1"
                   android:src="@drawable/a4" />

               <ImageView
                   android:id="@+id/imageView5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="0dp"
                   android:layout_weight="2"
                   android:scaleType="fitEnd"
                   android:src="@drawable/a5" />

              		</LinearLayout>

           <ImageView
               android:id="@+id/imageView6"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="8"
               android:scaleType="fitXY"
               android:src="@drawable/a16" />

           <LinearLayout
               android:id="@+id/layout1"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.26"
               android:background="#ffffff"
               android:orientation="vertical"
               android:weightSum="8" >

               <ImageView
                   android:id="@+id/imageView7"
                   android:layout_width="fill_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="23.33"
                   android:scaleType="centerInside"
                   android:src="@drawable/a7" />

           </LinearLayout>

           <LinearLayout
               android:id="@+id/_layout2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="2.44"
               android:background="#ffffff"
               android:orientation="horizontal"
               android:weightSum="3" 
               >

               <ImageView
                   android:id="@+id/imageView8"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/a8" />

               <ImageView
                   android:id="@+id/imageView9"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/a9" />

               <ImageView
                   android:id="@+id/imageView10"
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                   android:scaleType="centerInside"
                   android:src="@drawable/a10" />

           </LinearLayout>

           <LinearLayout
               android:id="@+id/_layout3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="#ffffff"
               android:orientation="horizontal"
               android:weightSum="5" >

               <ImageView
                   android:id="@+id/imageView11"
                   android:layout_width="fill_parent"
                   android:layout_height="58dp"
                   android:scaleType="centerInside"
                   android:src="@drawable/a11" />

           </LinearLayout>

          <LinearLayout
              android:id="@+id/_layout4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2.19"
              android:background="#ffffff"
              android:orientation="horizontal"
              android:weightSum="4" >

              <ImageView
                  android:id="@+id/imageView12"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:src="@drawable/a12" />

              <ImageView
                  android:id="@+id/imageView13"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:src="@drawable/a13" />

              <ImageView
                  android:id="@+id/imageView14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:src="@drawable/a14" />

              <ImageView
                  android:id="@+id/imageView15"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:src="@drawable/a15" />

           </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="240dp"
        android:layout_weight="23.33"
        android:scaleType="fitCenter"
        android:src="@drawable/a6" />

</RelativeLayout>